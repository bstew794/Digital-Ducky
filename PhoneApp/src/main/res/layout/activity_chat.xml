<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.braedenstewartdigitalduckyproject1.phoneapp.ChatViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{viewModel.chatTitle}"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_message_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/message_field"
            android:ems="11"
            android:hint="@string/text_field"
            android:inputType="textLongMessage"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_title" />

        <Button
            android:id="@+id/submit_message_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/submit_button"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_message_field"
            app:layout_constraintStart_toEndOf="@+id/push_to_talk"
            app:layout_constraintTop_toTopOf="@+id/add_message_field" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_message_field" />

        <ImageView
            android:id="@+id/push_to_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Button to activate speech to text"
            android:foreground="@drawable/ic_mic_off"
            app:layout_constraintBottom_toBottomOf="@+id/add_message_field"
            app:layout_constraintStart_toEndOf="@+id/add_message_field"
            app:layout_constraintTop_toBottomOf="@+id/chat_title"
            app:srcCompat="@drawable/ic_mic_off" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>